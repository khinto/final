<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202442"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Sign Up"
            android:textColor="#D6D6D6"
            android:textSize="30dp"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/firstNameInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textSize="13dp"
                android:hint="First Name"
                android:minHeight="50dp"
                android:padding="10dp"
                android:layout_marginRight="5dp"
                android:textColorHint="#636d8c"
                android:textColor="#a9afc1"
                android:backgroundTint="@null"
                android:background="@drawable/input_radius"
                android:inputType="text"
                android:drawableRight="@drawable/ic_baseline_person_outline_24"/>

            <EditText
                android:id="@+id/lastNameInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textSize="13dp"
                android:hint="Last Name"
                android:minHeight="50dp"
                android:padding="10dp"
                android:layout_marginLeft="5dp"
                android:textColorHint="#636d8c"
                android:textColor="#a9afc1"
                android:backgroundTint="@null"
                android:background="@drawable/input_radius"
                android:inputType="text"
                android:drawableRight="@drawable/ic_baseline_person_outline_24" />

        </LinearLayout>

        <EditText
            android:id="@+id/signupEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:hint="E-Mail"
            android:layout_marginTop="20dp"
            android:minHeight="50dp"
            android:padding="10dp"
            android:textColorHint="#636d8c"
            android:textColor="#a9afc1"
            android:backgroundTint="@null"
            android:background="@drawable/input_radius"
            android:inputType="textEmailAddress"
            android:drawableRight="@drawable/ic_baseline_alternate_email_24"/>

        <EditText
            android:id="@+id/idcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_radius"
            android:backgroundTint="@null"

            android:hint="ID Card"
            android:inputType="textEmailAddress"
            android:minHeight="50dp"
            android:padding="10dp"
            android:textColor="#a9afc1"
            android:textColorHint="#636d8c"
            android:textSize="13dp" />

        <EditText
            android:id="@+id/signUpPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:hint="Password"
            android:layout_marginTop="20dp"
            android:minHeight="50dp"
            android:padding="10dp"
            android:textColorHint="#636d8c"
            android:textColor="#a9afc1"
            android:backgroundTint="@null"
            android:background="@drawable/input_radius"
            android:inputType="textPassword"
            android:drawableRight="@drawable/ic_baseline_remove_red_eye_24_default"/>

        <EditText
            android:id="@+id/signUpConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:hint="Confirm Password"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="18dp"
            android:minHeight="50dp"
            android:padding="10dp"
            android:textColorHint="#636d8c"
            android:textColor="#a9afc1"
            android:backgroundTint="@null"
            android:background="@drawable/input_radius"
            android:inputType="textPassword"
            android:drawableRight="@drawable/ic_baseline_remove_red_eye_24_default"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/passStrengthText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-medium"
                android:text=""
                android:gravity="center"
                android:textColor="#636d8c" />

            <TextView
                android:id="@+id/passStrength"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-black"
                android:text=""
                android:gravity="center"
                android:textColor="#fff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/saveLoginCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="By signing up you accept"
                android:buttonTint="#41cd7d"
                android:textColor="#636d8c" />

            <TextView
                android:id="@+id/tosBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-black"
                android:text=" Terms and Conditions"
                android:gravity="center"
                android:textColor="#41cd7d" />

        </LinearLayout>

        <Button
            android:id="@+id/register_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:textSize="18dp"
            android:background="@drawable/border_radius"
            android:textColor="#33385a"
            android:textAllCaps="false"
            android:text="Sign Up" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"
            android:background="#10ffffff"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/signInText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-medium"
                android:text="Already have an account? "
                android:gravity="center"
                android:textColor="#636d8c" />

            <TextView
                android:id="@+id/signInBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-black"
                android:text="Sign In"
                android:gravity="center"
                android:textColor="#41cd7d" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>