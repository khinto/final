<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="#202023">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/homeFragment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Welcome, "
            android:textColor="#D6D6D6"
            android:textSize="22dp"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:background="@drawable/wallet_style"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Available"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:textColor="#7D7D7E"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/gelAvailableDisplayFH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="00.00₾"
                android:paddingLeft="10dp"
                android:textColor="#D0D0D1"
                android:textSize="35dp" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/firstCurrAvailableDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="00.00$"
                    android:paddingLeft="10dp"
                    android:textColor="#D0D0D1"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/secondCurrAvailableDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="00.00€"
                    android:paddingLeft="10dp"
                    android:textColor="#D0D0D1"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/thirdCurrAvailableDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="00.00£"
                    android:paddingLeft="10dp"
                    android:textColor="#D0D0D1"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/fourthCurrAvailableDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="00.00CA$"
                    android:paddingLeft="10dp"
                    android:textColor="#D0D0D1"
                    android:textSize="15dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account Number"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:textColor="#7D7D7E"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/creditCardNumberDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:letterSpacing="0.2"
                android:text=""
                android:paddingLeft="6dp"
                android:textColor="#D0D0D1"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutCreateCard"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:background="#995fff"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="@+id/guideline3">

            <TextView
                android:id="@+id/createCardBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="#30ffffff"
                android:fontFamily="sans-serif-light"
                android:padding="10dp"
                android:text="Create New Card"
                android:textColor="#90ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="90dp"
                android:layout_gravity="center"
                android:background="@drawable/wallet_icon" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/accountBtn"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:padding="5dp"
                android:background="#20ffffff"
                android:textColor="#DDDADA"
                android:drawableTop="@drawable/ic_baseline_person_outline_24"
                android:text="Account"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/cardBtn"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:background="#20ffffff"
                android:textColor="#DDDADA"
                android:drawableTop="@drawable/ic_baseline_credit_card_24"
                android:text="Card"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/transferBtn"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:background="#20ffffff"
                android:textColor="#DDDADA"
                android:drawableTop="@drawable/ic_baseline_compare_arrows_24"
                android:text="Transfer"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/historyBtn"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:background="#20ffffff"
                android:textColor="#DDDADA"
                android:drawableTop="@drawable/ic_baseline_list_24"
                android:text="History"
                android:textAllCaps="false" />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>