<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="#202023"
    tools:context=".ui.transfer.TransferFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/homeFragment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Transfer Money"
        android:textColor="#bad341"
        android:textSize="22dp"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="@drawable/wallet_style"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Available"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:textColor="#7D7D7E"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/gelAvailableDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="00.00₾"
            android:paddingLeft="10dp"
            android:textColor="#D0D0D1"
            android:textSize="35dp" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/firstCurrAvailableDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="00.00$"
                android:paddingLeft="10dp"
                android:textColor="#D0D0D1"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/secondCurrAvailableDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="00.00€"
                android:paddingLeft="10dp"
                android:textColor="#D0D0D1"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/thirdCurrAvailableDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="00.00£"
                android:paddingLeft="10dp"
                android:textColor="#D0D0D1"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/fourthCurrAvailableDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="00.00 CA$"
                android:paddingLeft="10dp"
                android:textColor="#D0D0D1"
                android:textSize="15dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account Number"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:textColor="#7D7D7E"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/creditCardNumbDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:letterSpacing="0.2"
            android:text="1900 8988 1234"
            android:paddingLeft="6dp"
            android:textColor="#D0D0D1"
            android:textSize="20dp" />
    </LinearLayout>

        <TextView
            android:id="@+id/hfNotificationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium"
            android:text=""
            android:textColor="#e74c3c"
            android:textSize="15dp"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/targetCreditCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:hint="Enter Credit Card Number"
            android:minHeight="50dp"
            android:padding="10dp"
            android:layout_marginRight="5dp"
            android:textColorHint="#f08c4c"
            android:textColor="#D6D6D6"
            android:backgroundTint="@null"
            android:background="@drawable/input_radius"
            android:inputType="text"
            android:drawableRight="@drawable/credit_card_orange"/>

        <EditText
            android:id="@+id/targetTransferAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:layout_marginTop="20dp"
            android:hint="Enter Amount"
            android:minHeight="50dp"
            android:padding="10dp"
            android:layout_marginRight="5dp"
            android:textColorHint="#f08c4c"
            android:textColor="#D6D6D6"
            android:backgroundTint="@null"
            android:background="@drawable/input_radius"
            android:inputType="text"
            android:drawableRight="@drawable/add_icon_orange"/>

        <EditText
            android:id="@+id/transferCurrency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:layout_marginTop="20dp"
            android:hint="Enter Currency"
            android:minHeight="50dp"
            android:padding="10dp"
            android:layout_marginRight="5dp"
            android:textColorHint="#f08c4c"
            android:textColor="#D6D6D6"
            android:backgroundTint="@null"
            android:background="@drawable/input_radius"
            android:inputType="text"
            android:drawableRight="@drawable/usd_icon_orange"/>


        <Button
            android:id="@+id/sendBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#10ffffff"
            android:textColor="#f08c4c"
            android:layout_marginTop="50dp"
            android:text="Send Money" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>