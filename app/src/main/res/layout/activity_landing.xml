<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202442"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Sign In"
            android:textColor="#D6D6D6"
            android:textSize="30dp"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/signInEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:hint="E-Mail"
            android:minHeight="50dp"
            android:padding="10dp"
            android:textColorHint="#636d8c"
            android:textColor="#a9afc1"
            android:backgroundTint="@null"
            android:background="@drawable/input_radius"
            android:inputType="textEmailAddress"
            android:drawableRight="@drawable/ic_baseline_alternate_email_24"/>

        <EditText
            android:id="@+id/signInPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:hint="Password"
            android:layout_marginTop="20dp"
            android:minHeight="50dp"
            android:padding="10dp"
            android:textColorHint="#636d8c"
            android:textColor="#a9afc1"
            android:backgroundTint="@null"
            android:background="@drawable/input_radius"
            android:inputType="textPassword"
            android:drawableRight="@drawable/ic_baseline_remove_red_eye_24_default"/>


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/saveLoginCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Remember Me"
                android:buttonTint="#41cd7d"
                android:textColor="#636d8c" />

            <TextView
                android:id="@+id/first_numb_evaluation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:text="Forgot Password?"
                android:textColor="#636d8c" />

        </RelativeLayout>


        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:textSize="18dp"
            android:background="@drawable/border_radius"
            android:textColor="#33385a"
            android:textAllCaps="false"
            android:text="Sign In" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"
            android:background="#10ffffff"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/signUpText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-medium"
                android:text="Don't have an account? "
                android:gravity="center"
                android:textColor="#636d8c" />

            <TextView
                android:id="@+id/signUpBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-black"
                android:text="Sign Up"
                android:gravity="center"
                android:textColor="#41cd7d" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>